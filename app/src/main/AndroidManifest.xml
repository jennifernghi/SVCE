    package="com.example.android.svce">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.HomeActivity" />
        <activity
            android:name=".activities.Login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.Signup"
            android:screenOrientation="portrait" />
        <activity android:name=".activities.UserActivity" />
        <activity android:name=".activities.MyInfoActivity" />
        <activity android:name=".activities.MyIdeasActivity" />
        <activity android:name=".activities.MySavedIdeasActivity" />
        <activity android:name=".activities.IdeaDetailsActivity"></activity>
    </application>

</manifest>