<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="HomeActivityViewModel"
            type="com.example.android.svce.model.viewModel.HomeActivityViewModel"/>
    </data>
<android.support.design.widget.CoordinatorLayout


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.svce.activities.HomeActivity"
    android:background="@color/light_gray">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:gravity="right|center_vertical"
        android:background="@color/white">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/two_dp"
            android:layout_marginBottom="@dimen/two_dp"
            app:thumbnailImageUrl="@{HomeActivityViewModel.userThumbnail}"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/white"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@{HomeActivityViewModel.userEmail}"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/eight_dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/control_container"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/white">

            <LinearLayout
                android:id="@+id/left_control_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/list_button"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="20dp"
                    android:src="@drawable/list_active" />

                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="20dp"
                    android:src="@drawable/search" />
            </LinearLayout>



            <LinearLayout
                android:id="@+id/right_control_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_button"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="20dp"
                    android:src="@drawable/user" />

                <ImageView
                    android:id="@+id/logout_button"
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="20dp"
                    android:src="@drawable/logout" />

            </LinearLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/control_container"
            android:layout_marginBottom="@dimen/four_dp">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/ideas_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="40dp"
                android:scrollbars="vertical" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/sixteen_dp"
                android:layout_marginEnd="@dimen/sixteen_dp">
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:onClick="@{HomeActivityViewModel::addIdea}"
                android:src="@drawable/plus"
                app:backgroundTint="@color/colorPrimary"
                app:fabSize="normal" />
            </RelativeLayout>


        </RelativeLayout>

    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
</layout>