<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.svce.activities.HomeActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <!-- each item shown in the list-->
        <LinearLayout
            android:id="@+id/ideas_item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/eight_dp"
            android:layout_marginStart="@dimen/eight_dp"
            android:layout_marginEnd="@dimen/eight_dp">

            <!--first row: title of idea-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ideas_title"
                android:text="@string/title"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/two_dp"
                android:layout_marginEnd="@dimen/two_dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/four_dp"/>
            <!-- second row: date and type of ideas-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_marginBottom="@dimen/four_dp">

                <LinearLayout
                    android:id="@+id/date_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/time_ic"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/time"
                        android:layout_marginEnd="@dimen/eight_dp"
                        android:layout_marginStart="@dimen/two_dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/date"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/four_dp"
                        android:layout_marginEnd="@dimen/eight_dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/inactive_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/category_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginStart="@dimen/eight_dp">
                    <ImageView
                        android:id="@+id/type_ic"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/type"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/two_dp"
                        android:layout_marginEnd="@dimen/eight_dp" />
                    <TextView
                        android:id="@+id/type"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/type"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/four_dp" />
                </LinearLayout>


            </LinearLayout>

            <!-- 3rd row: summary -->
            <TextView
                android:id="@+id/summary"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:ellipsize="end"
                android:text="@string/summary"
                android:layout_marginBottom="@dimen/four_dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/inactive_icon"/>
            <!--4th row: like and comment-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/four_dp"
                android:layout_marginBottom="@dimen/four_dp">

                <LinearLayout
                    android:id="@+id/like_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/like_ic"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/like"
                        android:layout_marginEnd="@dimen/eight_dp"
                        android:layout_marginStart="@dimen/two_dp"
                        android:layout_gravity="center_vertical"/>
                    <TextView
                        android:id="@+id/like"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/like"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/four_dp"
                        android:layout_marginEnd="@dimen/sixteen_dp"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/inactive_icon" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/comment_container"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/four_dp"
                    android:layout_marginStart="@dimen/sixteen_dp">
                    <ImageView
                        android:id="@+id/comment_ic"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/comment"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="@dimen/two_dp"
                        android:layout_marginEnd="@dimen/eight_dp" />
                    <TextView
                        android:id="@+id/comment"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/comments"
                        android:textSize="14sp"
                        android:gravity="center_vertical"
                        android:layout_marginStart="@dimen/four_dp" />
                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/inactive_icon"/>

        </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/control_container"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/left_control_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.42"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/list_button"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="25dp"
                    android:src="@drawable/list_active" />

                <ImageView
                    android:id="@+id/search_button"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="25dp"
                    android:src="@drawable/search" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/middle_control_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.15"
                android:gravity="center"
                android:orientation="horizontal">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:scaleType="center"
                    android:src="@drawable/idea"
                    app:backgroundTint="@color/white"
                    app:fabSize="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/right_control_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.42"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_button"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_marginEnd="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="25dp"
                    android:src="@drawable/user" />

                <ImageView
                    android:id="@+id/logout_button"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="@dimen/eight_dp"
                    android:layout_weight="0.5"
                    android:maxWidth="25dp"
                    android:src="@drawable/logout" />

            </LinearLayout>

        </LinearLayout>

        <!--recycler view-->
       <!-- <android.support.v7.widget.RecyclerView
            android:id="@+id/ideas_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scrollbars="vertical" />-->


    </RelativeLayout>


</android.support.design.widget.CoordinatorLayout>
